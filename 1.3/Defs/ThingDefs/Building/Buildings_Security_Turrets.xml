<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BuildingBase">
		<defName>Anty_RecycleTurret</defName>
		<label>Recycle turret-Outside addon</label>
		<description>An auto-turret that is built using decommissioned or good-for-nothing lazy entities. It has proven its usefulness in many ways, such as fortifying the base and filling up the lacking firepower on the battlefield. Passerbys sometimes feel something glaring at them.</description>
		<descriptionHyperlinks>
			<HediffDef>Chemicaldissolution</HediffDef>
			<ThingDef>Anty_Recyclecore</ThingDef>
		</descriptionHyperlinks>
		<thingClass>Building_TurretGun</thingClass>
		<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
				<texPath>Things/Building/Turret/RETurret_Bot</texPath>
				<graphicClass>Graphic_Single</graphicClass>
				<drawSize>(2,2)</drawSize>
			<damageData>
				<rect>(0.2,0.2,0.6,0.6)</rect>
			</damageData>
			<shadowData>
				<volume>(0.54,0.25,0.54)</volume>
				<offset>(0,0,0)</offset>
			</shadowData>
		</graphicData>
		<uiIconPath>Things/Building/Turret/RETurretA</uiIconPath>
		<uiIconScale>0.90</uiIconScale>
		<minifiedDef>MinifiedThing</minifiedDef>
		<altitudeLayer>Building</altitudeLayer>
		<stealable>false</stealable>
		<rotatable>false</rotatable>
		<thingCategories>
			<li>BuildingsSecurity</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>220</MaxHitPoints>
			<Flammability>0.2</Flammability>
			<WorkToBuild>1800</WorkToBuild>
			<Mass>22</Mass>
			<Beauty>-30</Beauty>
		</statBases>
		<tickerType>Normal</tickerType>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
			<li Class="CompProperties_Breakdownable"/>
			<li Class="CompProperties_Refuelable">
				<fuelLabel>Shots until barrel change</fuelLabel>
				<fuelGizmoLabel>Barrel durability</fuelGizmoLabel>
				<outOfFuelMessage>Cannot shoot: Needs new barrel</outOfFuelMessage>
				<fuelFilter><thingDefs><li>AntyExoskeleton</li></thingDefs></fuelFilter>
				<fuelCapacity>30</fuelCapacity>       <!-- 30 bursts -->
				<fuelMultiplier>1</fuelMultiplier>
				<initialFuelPercent>1</initialFuelPercent>
				<autoRefuelPercent>0.5</autoRefuelPercent>
				<showFuelGizmo>true</showFuelGizmo>
				<minimumFueledThreshold>1</minimumFueledThreshold>
				<factorByDifficulty>true</factorByDifficulty>
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
				<fuelIconPath>UI/Overlays/Barrel</fuelIconPath>
			</li>
		</comps>
		<passability>PassThroughOnly</passability>
		<pathCost>80</pathCost>
		<fillPercent>0.55</fillPercent>
		<hasTooltip>true</hasTooltip>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>80</costStuffCount>
		<costList>
			<AntyExoskeleton>30</AntyExoskeleton>
			<Steel>15</Steel>
			<ComponentIndustrial>3</ComponentIndustrial>
			<Anty_Recyclecore>1</Anty_Recyclecore>
		</costList>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<designationCategory>Antybuilding</designationCategory>
		<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
		<building>
			<combatPower>20</combatPower>
			<ai_combatDangerous>false</ai_combatDangerous>
			<turretGunDef>Gun_RecycleTurret</turretGunDef>
			<turretBurstCooldownTime>3.5</turretBurstCooldownTime>
		</building>
		<placeWorkers>
			<li>PlaceWorker_TurretTop</li>
			<li>PlaceWorker_ShowTurretRadius</li>
		</placeWorkers>
		<designationHotKey>Misc2</designationHotKey>
		<researchPrerequisites>
			<li>AntyAcidweapon_D</li>
		</researchPrerequisites>
	</ThingDef>

	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_RecycleTurret</defName>
		<label>Recycle turret bullet</label>
		<graphicData>
			<texPath>Things/Weapons/lan</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>TransparentPostLight</shaderType>
		</graphicData>
		<thingClass>Projectile_Explosive</thingClass>
		<projectile>
			<speed>35</speed>
			<damageDef>AT_AcidBomb</damageDef>
			<explosionRadius>1.9</explosionRadius>
			<explosionDelay>35</explosionDelay>
			<preExplosionSpawnThingDef>Filth_AntyAcid</preExplosionSpawnThingDef>
			<preExplosionSpawnChance>0.2</preExplosionSpawnChance>
			<arcHeightFactor>0.4</arcHeightFactor>
			<shadowSize>0.6</shadowSize>
			<stoppingPower>1</stoppingPower>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="BaseWeaponTurret">
		<defName>Gun_RecycleTurret</defName>
		<label>Recycle turret gun</label>
		<description>A simple automatic gun made to be mounted on a turret.</description>
		<graphicData>
			<texPath>Things/Building/Turret/REATurret_Top</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<RangedWeapon_Cooldown>3.5</RangedWeapon_Cooldown>
			<DeteriorationRate>0</DeteriorationRate>
			<Mass>5</Mass>
			<Flammability>0</Flammability>
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<defaultProjectile>Bullet_RecycleTurret</defaultProjectile>
				<warmupTime>0</warmupTime>
				<forcedMissRadius>2.9</forcedMissRadius>
				<range>44.9</range>
				<ticksBetweenBurstShots>40</ticksBetweenBurstShots>
				<burstShotCount>4</burstShotCount>
				<soundCast>ShotAnty_D</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
				<consumeFuelPerShot>0.125</consumeFuelPerShot>
			</li>
		</verbs>
	</ThingDef>
	
	
	
