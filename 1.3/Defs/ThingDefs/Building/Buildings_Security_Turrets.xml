	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_glueRifle</defName>
		<label>glue Bullet</label>
		<graphicData>
			<texPath>Things/Weapons/jan</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<color>(0, 1, 0)</color>
		</graphicData>
		<projectile>
			<speed>70</speed>
			<damageDef>AT_glueBullet</damageDef>
			<damageAmountBase>1</damageAmountBase>
			<armorPenetrationBase>0.02</armorPenetrationBase>
			<stoppingPower>3</stoppingPower>
			<extraDamages>
					<li>
						<def>AT_AcidBullet</def>
						<amount>1</amount>
					</li>
			</extraDamages>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="BaseWeaponTurret">
		<defName>Gun_RecycleTurretB</defName>
		<label>Recycle turret gun</label>
		<description>A simple automatic gun made to be mounted on a turret.</description>
		<graphicData>
			<texPath>Things/Building/Turret/REBTurret_Top</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<AccuracyTouch>0.90</AccuracyTouch>
			<AccuracyShort>0.85</AccuracyShort>
			<AccuracyMedium>0.30</AccuracyMedium>
			<AccuracyLong>0.1</AccuracyLong>
			<RangedWeapon_Cooldown>3.5</RangedWeapon_Cooldown>
			<DeteriorationRate>0</DeteriorationRate>
			<Mass>5</Mass>
			<Flammability>0</Flammability>
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<defaultProjectile>Bullet_glueRifle</defaultProjectile>
				<warmupTime>0</warmupTime>
				<range>14.9</range>
				<ticksBetweenBurstShots>8</ticksBetweenBurstShots>
				<burstShotCount>10</burstShotCount>
				<soundCast>ShotAnty_E</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
				<consumeFuelPerShot>0.1</consumeFuelPerShot>
			</li>
		</verbs>
	</ThingDef>
	
	<DamageDef>
		<defName>AT_glueBullet</defName>
		<label>gluebullet</label>
		<workerClass>DamageWorker_AddInjury</workerClass>
		<externalViolence>true</externalViolence>
		<deathMessage>{0} has been shot to death.</deathMessage>
		<hediff>glueBomb</hediff>
		<harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
		<impactSoundType>AntyAcid_Bullet</impactSoundType>
		<armorCategory>Blunt</armorCategory>
		<overkillPctToDestroyPart>0~0.7</overkillPctToDestroyPart>
		<isRanged>true</isRanged>
		<makesAnimalsFlee>true</makesAnimalsFlee>
		<additionalHediffs>
				<li>
					<hediff>AT_glue</hediff>
					<severityPerDamageDealt>0.1</severityPerDamageDealt>
					<victimSeverityScalingByInvBodySize>true</victimSeverityScalingByInvBodySize>
				</li>
		</additionalHediffs>
	</DamageDef>
	
	
	
