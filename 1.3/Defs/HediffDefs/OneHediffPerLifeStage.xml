<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- baby -->

	<HediffDef ParentName="HiddenHediffBase_Anty">
		<defName>AntyLarva_Ready</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<description>.</description>
		<label>LARVA_Ready</label>
		<initialSeverity>1</initialSeverity>
		<maxSeverity>1</maxSeverity>
		<minSeverity>0.01</minSeverity>
		<scenarioCanAdd>false</scenarioCanAdd>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.1</severityPerDay>
				<showHoursToRecover>false</showHoursToRecover>
			</li>
		</comps>
		<stages>
		<li>
			<minSeverity>0.95</minSeverity>
			<becomeVisible>false</becomeVisible>
			<lifeThreatening>false</lifeThreatening>
			<hediffGivers>
				<li Class="AntyHediffGiver_Random">
					<hediff>AntyLarva_p</hediff>
					<mtbDays>0.001</mtbDays>
					<partsToAffect>
						<li>Antyabdomen</li>
					</partsToAffect>
				</li>
			</hediffGivers>
		</li>
		</stages>
	</HediffDef>
	<HediffDef ParentName="HiddenHediffBase_Anty">
		<defName>AntyLarva_p</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<description>It's still growing and can't stand the transformation aftereffect. cannot do anything else until the 15th day after birth.</description>
		<label>LARVA</label>
		<initialSeverity>1</initialSeverity>
		<maxSeverity>1</maxSeverity>
		<scenarioCanAdd>false</scenarioCanAdd>
		<comps>
			<li Class="MoharHediffs.HediffCompProperties_PostRemoveTrigger_HediffAdd">
				<triggeredHediff>
					<li>transformationaftereffect_B</li>
					<li>AT_LarvaLearningAid</li>
				</triggeredHediff>
			</li>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>420000</disappearsAfterTicks>
			</li>
		</comps>
		<stages>
		<li>
			<minSeverity>0.01</minSeverity>
			<becomeVisible>true</becomeVisible>
			<lifeThreatening>false</lifeThreatening>
			<capMods>
				<li>
					<capacity>Consciousness</capacity>
					<setMax>0.10</setMax>
				</li>
			</capMods>
		</li>
		</stages>
	</HediffDef>

	<HediffDef>
		<defName>AT_LarvaLearningAid</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>curiosity</label>
		<description>Curiosity has increased the learning rate.</description>
		<defaultLabelColor>(0,0,0)</defaultLabelColor>
		<scenarioCanAdd>false</scenarioCanAdd>
		<initialSeverity>1</initialSeverity>
		<maxSeverity>1</maxSeverity>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>900000</disappearsAfterTicks>
			</li>
		</comps>
		<stages>
			<li>
				<statOffsets>
					<GlobalLearningFactor>0.4</GlobalLearningFactor>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>
	

	<!---->	
	<HediffDef ParentName="HiddenHediffBase_Anty">
		<defName>AntyLarva_p_STAGE</defName>
		<hediffClass>HediffWithComps</hediffClass>

		<description>LARVA</description>
		<label>LARVA</label>
		<labelNoun>LARVA.labelNoun</labelNoun>

		<comps>
			<li Class="OHPLS.HediffCompProperties_LifeStageHediffAssociation">
				<race>Anty</race>

				<bodyPartDef>Antyabdomen</bodyPartDef>
				<!-- <bodyPartLabel>left hand</bodyPartLabel> -->

				<associations>
					<li>
						<lifeStageDef>HumanlikeBaby</lifeStageDef>
						<hediff>AntyLarva_Ready</hediff>
					</li>
				</associations>
				
				<!-- <debug>true</debug> -->
			</li>
		</comps>
	</HediffDef>
	
</Defs>
